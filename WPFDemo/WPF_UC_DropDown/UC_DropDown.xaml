                        </WrapPanel>
                        <!--</DockPanel>-->
                        <!--<DockPanel  Width="400" Height="Auto">-->
                        <Label Content="面积:" Margin="0,0,0,0" VerticalContentAlignment="Top" Grid.Row="3" Grid.Column="0"/>
