                            <Label Content="3房" Margin="0,0,0,0" Tag="户型"/>
                            <Label Content="4房" Margin="0,0,0,0" Tag="户型"/>
                            <Label Content="5房" Margin="0,0,0,0" Tag="户型"/>
                            <Label Content="1-2房" Margin="0,0,0,0" Tag="户型"/>
