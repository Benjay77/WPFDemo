<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- 字体类型 -->
    <FontFamily   x:Key="FontFamily">Microsoft YaHei</FontFamily>
    <FontFamily  x:Key="FangZheng">pack://application:,,,/JP.HCZZP.WPFApp.Resource;component/FontResources/#方正兰亭纤黑_GBK</FontFamily>
    <!--“较小”的字体大小 -->
    <sys:Double x:Key="XSmallFontSize">12</sys:Double>
    <!--“较小”的字体大小 -->
    <sys:Double x:Key="SmallFontSize">14</sys:Double>
    
    <sys:Double x:Key="DefaultSmalFontSize">14</sys:Double>
    <!--“普通”的字体大小 -->
    <sys:Double x:Key="DefaultFontSize">16</sys:Double>
    
    <!--“较大”的字体大小 -->
    <sys:Double x:Key="LargerFontSize">18</sys:Double>

    <!--“标题”的字体大小 -->
    <sys:Double x:Key="HeaderFontSize">20</sys:Double>

    <!--“标题”的字体大小2 -->
    <sys:Double x:Key="HeaderFontSizeL">25</sys:Double>

</ResourceDictionary>